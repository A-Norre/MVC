{% extends "base.html.twig" %}

{% block title %}Deck{% endblock %}


{% block body %}

<h3>Deck of cards:<h3>



{% for card in deck %}
    {% if '♥' in card %}
        <b style="color: red">{{ card }}</b><br>
    {% elseif '♦' in card %}
        <b style="color: red">{{ card }}</b><br>
    {% else %}
        <b>{{ card }}</b><br>
    {% endif %}
{% endfor %}


{% endblock %}
