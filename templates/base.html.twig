<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <span class="site-title">My Symfony Site</span>
        </header>
        <nav>
            <ul>
                <li><a href="{{ path('presentation') }}">Presentation</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                <li><a href="{{ path('quote') }}">Quote</a></li>
                <li><a href="{{ path('card') }}">Card</a></li>
                <li><a href="{{ path('api') }}">JSON/API</a></li>
                <li><a href="{{ path('reset') }}">Reset Session</a></li>
                <li><a href="{{ path('game') }}">Game</a></li>
                <li><a href="{{ path('library') }}">Books</a><br></li>
                <li><a href="{{ path('metrics') }}">Metrics</a><br></li>
            </ul>
        </nav>
        <main>{% block body %}{% endblock %}</main>

        <footer>{% block footer %}{% endblock %}</footer>
    </body>
</html>
